{
  "manifest_version": 3,
  "name": "Privacidade Inteligente — Conceito A (Firefox, Ideal)",
  "version": "0.5.0",
  "description": "Bloqueio de conteúdo com listas personalizadas, relatório e diferenciação de trackers 1ª vs 3ª parte.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background/worker.js"
    ],
    "type": "module"
  },
  "action": {
    "default_title": "Privacidade: Score & Detecções",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/detector.js",
        "content/canvas-patch.js",
        "content/hook-detector.js"
      ],
      "run_at": "document_start"
    }
  ]
}




